<!DOCTYPE html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        body {
            font-size: 10px;
        }

        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        .header {
            height: 300px;
            background-color: aqua;
            margin-bottom: 20px;
        }
    </style>

</head>

<body>
    <div class="report-body">
        <div class="info">
            <table class="table table-striped mt-10" cellpadding="2">

                <thead style="vertical-align: middle; text-align: center;">
                        <tr>
                            <% data.thead.forEach(function(cell) { %>
                                <th rowspan="<%= cell.rowSpan || 1 %>" colspan="<%= cell.colSpan || 1 %>">
                                    <%= cell.headerName %>
                                </th>
                                <% }); %>
                        </tr>
                </thead>

                <tbody>
                    <% data.list.forEach(function(row, index) { %>
                        <tr>
                            <% data.dataColumns.forEach(function(cell, tdIndex) { %>
                                <td style="<%= data.numberIndexs.includes(tdIndex) ? 'text-align: right;' : '' %>">
                                    <%= cell == 'id' ? index+1 : row[cell] == null ? 0 : row[cell] %>
                                </td>
                                <% }); %>
                        </tr>
                        <% }); %>

                </tbody>
            </table>
        </div>
    </div>
</body>

</html>