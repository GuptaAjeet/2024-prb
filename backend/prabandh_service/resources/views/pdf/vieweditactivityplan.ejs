<!DOCTYPE html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        body {
            font-size: 10px;
        }

        table,
        th,
        td {
            border: 1px solid black;
        }

        .header {
            height: 300px;
            background-color: aqua;
            margin-bottom: 20px;
        }
    </style>

    <head>

    <body>
        <div class="report-body">
            <div class="info">
                <!-- <br /> -->
                <table class="table table-striped mt-10" cellpadding="2" border="1">
                    <thead>
                        <tr class="table-active">
                            <th width="5%" scope="col">Sr.No.</th>
                            <th width="10%" scope="col">District</th>
                            <th width="10%" scope="col">Schools</th>
                            <th width="15%" scope="col">PHY. QTY.</th>
                            <th width="10%" scope="col">UNIT COST (in Lakhs)</th>
                            <th width="20%" scope="col">FIN. AMT. (in Lakhs)</th>
                        </tr>
                    </thead>
                    <tbody border="1">
                        <% (data.list).forEach(function(user,i) { %>
                            <tr>
                                <td>
                                    <%= i+1 %>.
                                </td>
                                <td>
                                    <%= user.district_name %>
                                </td>
                                <td style="width: 30px;text-align: right;">
                                    <%= user.dd_school %>
                                </td>
                                <td style="text-align: right;">
                                    <%= user.physical_quantity %>
                                </td>
                                <td style="text-align: right;">
                                    <%= user.unit_cost %>
                                </td>
                                <td style="text-align: right;">
                                    <%= user.financial_amount %>
                                </td>
                            </tr>
                            <% }); %>
                            <tr>
                                <td  colspan="3" style="text-align: right;font-weight: bold;">
                                    Total
                                </td>
                                <td style="text-align: right;font-weight: bold;">
                                    <%= data?.quantity %>
                               </td>
                               <td style="text-align: center;font-weight: bold;">
                                ----
                                </td>
                                <td style="font-weight: bold;text-align: right;">
                                    â‚¹ <%= data?.financial_amount %>
                                </td>
                            </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </body>

</html>