<!DOCTYPE html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        body {
            font-size: 10px;
        }

        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>

    <head>

    <body>
        <div class="report-body">
            <div class="info">
                <div class="row row-cols-4 mt-2 mb-2">
                    <div class="col text-left"><strong>Role:</strong>
                        <%= data.role %>
                    </div>
                    <div class="col text-left">
                        <%if (data.state !=null){ %><strong>State:</strong>
                            <%= data.state %>
                                <% } %>
                    </div>
                    <div class="col text-left">
                        <%if (data.district !=null) { %><strong>Disttrict:</strong>
                            <%= data.district %>
                                <% } %>
                    </div>
                </div>
                <table class="table table-striped" cellpadding="2">
                    <thead>
                        <tr class="table-active">
                            <th width="5%" scope="col">Sr.No.</th>
                            <th width="50%" scope="col">Name</th>
                            <% if(data.district_id==0) { %>
                                <th width="15%" scope="col">District Name</th>
                                <% } %>
                                    <th width="10%" scope="col">Email</th>
                                    <th width="10%" scope="col">Mobile</th>
                                    <th width="10%" scope="col">Permission</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% (data.list).forEach(function(user,i) { %>
                            <tr>
                                <td>
                                    <%= i+1 %>.
                                </td>
                                <td>
                                    <%= user.Name %>
                                </td>
                                <% if(data.district_id==0) { %>
                                    <td>
                                        <%=user.DistrictName %>
                                    </td>
                                    <% } %>
                                        <td>
                                            <%= user.Email %>
                                        </td>
                                        <td>
                                            <%= user.Mobile %>
                                        </td>
                                        <td>
                                            <% if(user.permission==1) { %> Editor <% } else { %>Viewer <% } %>
                                        </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </body>

</html>